VERSION=0.5

1. to create a distribution/Release:
perform: 
cvs co lpzrobots
cd lpzrobots
cvs update -dP
cd dist_utils
./createDist.sh

2. for extra lib bundle:
just start ./createextraDist.sh

3. for binary distribution:
take the prepared distribution from 1 and do
cd lpzrobots-${VERSION}
make conf # select /usr/local and user (u)
make prepare
make libs
make clean
rm Makefile.conf
cd ../
tar -cvzf lpzrobots-${VERSION}-binary-lib-devel-`uname -m`.tgz lpzrobots-${VERSION}

# to make all examples do that (not needed)
cd ode_robots/simulations && make all 
cd ../../
cd ode_robots/examples/ && make all
cd ../../
cd selforg/simulations && make all
cd ../../
cd ga_tools/simulations && make all
cd ../../

make install # to make the makefiles find the libs

# rpm
checkinstall -R --pkgname=lpzrobots --pkgversion=$VERSION --pkgarch=`uname -i` --pkglicense=GPL/CC-NC --pkggroup="Robotics Group for Self-Organization of Control" --provides="Robot simulator" --pakdir=../ --requires="" make install

# deb
checkinstall -D --pkgname=lpzrobots --pkgversion=$VERSION --pkgarch=`uname -i` --pkglicense=GPL/CC-NC --pkggroup="Robotics Group for Self-Organization of Control" --provides="Robot simulator" --pakdir=../ --maintainer="georg.martius@web.de" --requires="" make install

